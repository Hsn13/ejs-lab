        <p>Rating: <%= item.rating %>/5</p>
        <p>Details: <%= item.details %></p>
      </li>
    <% }) %>
  </ul>

  <h2>Sides</h2>
  <ul>
    <% restaurant.menu.filter((item) => item.category === "sides").forEach((item) => { %>
      <li>
        <P>Name: <%= item.name %></P>
        <p>Price: $<%= item.price %></p>
        <p>Rating: <%= item.rating %>/5</p>
        <p>Details: <%= item.details %></p>
      </li>
    <% }) %>
  </ul>
  </ul>
</body>
</html>
